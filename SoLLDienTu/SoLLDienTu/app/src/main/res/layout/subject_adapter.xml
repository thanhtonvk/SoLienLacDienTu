<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_Mh"
                android:layout_width="120sp"
                android:layout_height="120sp"
                android:layout_centerVertical="true"
                android:padding="10sp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_book_subject" />

            <TextView
                android:id="@+id/tv_TenMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/image_Mh"
                android:text="Tên môn"
                android:textColor="#3F51B5"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_soTC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_TenMon"
                android:layout_marginTop="8sp"
                android:layout_toRightOf="@id/image_Mh"
                android:text="Số tín chỉ: "
                android:textColor="#4CAF50"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_kyHoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_soTC"
                android:layout_marginTop="8sp"
                android:layout_toRightOf="@id/image_Mh"
                android:text="Kỳ học: 2"
                android:textSize="15sp" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>