<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".SubjectsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:background="#fff" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn học kỳ:"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/sp_Ky"
                android:background="@drawable/corner_lv_ct_order"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Số Tín Chỉ tích lũy :"
            android:textColor="@color/black" />

        <TextView
            android:textSize="20sp"
            android:id="@+id/txt_sotcdahoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="... "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_tongsotc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/..."
            android:textSize="20sp"
            android:textColor="@color/black" />

    </LinearLayout>

    <ListView
        android:id="@+id/lvmonHoc"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>