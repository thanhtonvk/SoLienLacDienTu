<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_Mh"
                android:layout_width="90sp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:padding="10sp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_book_subject" />

            <TextView
                android:id="@+id/tv_TenMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/image_Mh"
                android:text="Định hướng nghề nghiệp"
                android:textColor="#3F51B5"
                android:textSize="19dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_soTC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_TenMon"
                android:layout_marginTop="8sp"
                android:layout_toRightOf="@id/image_Mh"
                android:text="Số tín chỉ: "
                android:textColor="#4CAF50"
                android:textSize="19sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_soTC"
                android:layout_alignLeft="@id/tv_soTC"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_DiemLD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:layout_marginRight="35dp"
                    android:text="Điểm LĐ: 2"
                    android:textColor="#F44336"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tv_DiemTL"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:textColor="#F44336"
                    android:text="Điểm TL: 2"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>